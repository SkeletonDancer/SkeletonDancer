preset: {{ level|lower }}

risky: false

linting: {{ linting ? 'true' : 'false' }}
{% if fixers is not empty %}

enabled:
    - {{ (fixers|join("\n    - "))|raw }}
{% endif %}
{% if disabled_fixers is not empty %}

disabled:
    - {{ (disabled_fixers|join("\n    - "))|raw }}
{% endif %}

finder:
{% for type in ['exclude', 'name', 'not_name', 'contains', 'not_contains', 'path', 'not_path', 'depth'] if finder[type] is not empty %}
    {{ type|replace('_', '-') }}:
        - '{{ (finder[type]|join("'\n        - '"))|raw }}'
{% endfor %}
