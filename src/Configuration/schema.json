{
	"title": "SkeletonDancer Schema",
	"type": "object",
    "additionalProperties": false,
	"properties": {
		"author": {
			"type": "object",
            "additionalProperties": false,
            "properties": {
                "name": { "type": "string" },
                "email": { "type": "string" }
            },
            "required": [ "name" ]
		},
        "title": {
			"type": "string"
		},
		"description": {
			"type": "string"
		},
		"questioners": {
            "type": "array"
		},
        "generators": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
		},
        "autoloading": {
            "type": "object",
            "description": "Description of additional autoload rules",
            "properties": {
                "psr-4": {
                    "type": "object",
                    "description": "This is a hash of namespaces (keys) and the PSR-4 directories they can map to (values, can be arrays of paths) by the autoloader.",
                    "additionalProperties": {
                        "type": ["string"],
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "files": {
                    "type": "array",
                    "description": "This is an array of files that are always required on every request."
                }
            }
        }
	},
	"required": [ "title", "description", "generators" ]
}
